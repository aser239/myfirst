<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景色-->
    <solid android:color="#33B5E5" />
    <!-- 圆角-->
    <corners android:radius="30dp" />
    <!--设置边框线的宽度和颜色-->
    <stroke
        android:width="3dp"
        android:color="#00574B" />

    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp" />
    <!-- 在这里写的代码，是指那种特殊要求，圆角下面的那句代码可以注释掉，如果用这种-->
</shape>