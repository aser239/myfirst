<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TeacherActivity.AddCourseActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/addCourseReturnToCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"/>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/collegeName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:text="院校名："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_collegeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/collegeName2"
                android:inputType="text"
                android:maxLines="1"
                android:selectAllOnFocus="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CourseName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:text="课程名："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_courseName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/CourseName2"

                android:inputType="text"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TX_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:inputType="textUri"
                android:text="课程图片："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/bt_photo"
                android:layout_toEndOf="@+id/TX_photo"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
            <Button
                android:id="@+id/bt_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="选择图片" />


<!--            <Button-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="跳转至图片上传" />-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_fiCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="课程结束时间："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_fiTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_toStartOf="@+id/bt_fiTime"
                android:layout_toEndOf="@+id/tx_fiCourse"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/bt_fiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="选择时间" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CourseIntroduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:inputType="textMultiLine"
                android:text="课程简介："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/CourseIntroduce"
                android:inputType="text"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="当前登录真实姓名："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_realName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/RealName"
                android:inputType="text"
                android:maxLines="1"
                android:selectAllOnFocus="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_stCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="课程开始时间："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_stTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@+id/bt_stTime"
                android:layout_toEndOf="@+id/tx_stCourse"
                android:gravity="center"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:maxLines="1" />

            <Button
                android:id="@+id/bt_stTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="选择时间" />
        </RelativeLayout>

